# SEI Platform Environment Configuration

# Database Configuration
TIMESCALE_URL=postgresql://sei_user:sei_password@timescaledb:5432/sei_platform
POSTGRES_URL=postgresql://sei_user:sei_password@postgresql:5432/sei_metadata
REDIS_URL=redis://redis:6379

# Message Queue
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_PREFIX=sei_

# API Keys (Set your actual keys)
GITHUB_TOKEN=your_github_token_here
GITLAB_TOKEN=your_gitlab_token_here
JIRA_API_TOKEN=your_jira_token_here
JIRA_BASE_URL=https://your-domain.atlassian.net
SLACK_BOT_TOKEN=your_slack_token_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600

# Application Settings
LOG_LEVEL=INFO
DEBUG=true
ENVIRONMENT=development

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Security
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000

# External Services
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Feature Flags
ENABLE_ML_FEATURES=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_PREDICTIVE_ANALYTICS=false